{
    "manifest_version": 3,
    "name": "AI Reading Assistant",
    "description": "Highlight text on any webpage and summarize it with AI.",
    "version": "1.0",
    "permissions": [
        "scripting",
        "activeTab",
        "contextMenus",
        "tabs"
    ],
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content/content.js"],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "ui/popup.html",
        "default_icon": {
            "16": "icons/icon.png",
            "48": "icons/icon.png",
            "128": "icons/icon.png"
        }
    },
    "commands": {
        "summarize": {
            "suggested_key": {
                "default": "Ctrl+Shift+X",
                "mac": "Command+Shift+X"
            },
            "description": "Summarize selected text"
        },
        "paraphrase": {
            "suggested_key": {
                "default": "Ctrl+Shift+P",
                "mac": "Command+Shift+P"
            },
            "description": "Paraphrase selected text"
        },
        "explain": {
            "suggested_key": {
                "default": "Ctrl+E",
                "mac": "Command+E"
            },
            "description": "Explain selected text in simple terms"
        },
        "translate": {
            "suggested_key": {
                "default": "Ctrl+Shift+T",
                "mac": "Command+Shift+T"
            },
            "description": "Translate selected text to Spanish"
        }
    },
    "host_permissions": [
        "<all_urls>"
    ]
}
